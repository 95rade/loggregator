#!/bin/bash

if [ "$TRAVIS_BRANCH" != "master" ]; then
  echo 'Skipping upload, since we are not building master.'
  exit 0
fi

set -e

# Deploy to Staging

echo 'Trigger prism deploy'
curl -X POST http://inception.prism.cf-app.com:4567/deploy/$STAGING_API_KEY

# Run integration tests

echo 'Trigger integration tests'
curl -X POST http://inception.prism.cf-app.com:4567/run_loggregator_integration/$STAGING_API_KEY
