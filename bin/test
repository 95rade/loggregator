#!/bin/bash

result=0

packages=(
    testhelpers
    deaagent
    deaagent/deaagent
    loggregatoragent
    loggregatoragent/loggregatoragent
    loggregator/loggregator
    loggregator/sink
    loggregator/agentlistener
    registrar
    loggregator
    cfcomponent
    loggregatorclient
);

for package in "${packages[@]}"
do
    echo -e "\n Testing package $package"
    $(dirname $0)/go fmt $package
    $(dirname $0)/go test -i --race $package
    $(dirname $0)/go test -v --race $package
    result+=$?
done

echo -e "\n Running build script to confirm main compiles"
$(dirname $0)/build
result+=$?
rm -f deaagent loggregatoragent loggregator

if [ $result -eq 0 ]; then
	echo -e "\nSUITE SUCCESS"
else
	echo -e "\nSUITE FAILURE"
fi

exit $result
